<!doctype html>
<html lang="en">
<head>
    <%- include ('partials/structure/head.ejs') %>
</head>

<body>

<header>
        <div class="jumbotron hidden-xs">
        </div><!-- jumbotron -->

        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a href="/" class="navbar-brand">Five Iron Frenzy</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/">Home</a></li>
                        <li><a href="/albums" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                aria-haspopup="true" aria-expanded="false">Discography <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/albums">FIF Discography</a></li>
                                <li role="separator" class="divider"></li>
                            </ul>
                        </li>
                    </ul><!-- nav -->
                </div><!-- navbar-collapse -->
            </div><!-- container -->
        </nav>
    </header>

        <div class="container">
            <div class="row d-flex justify-content-between">
                <div class="col-sm-4 card my-5 mx-1">
                <div class="card-body">
                    <h1 class="feedback-form-title">Send Us Feedback</h1>
                    <form class="feedback-form">
                        <div class="form-group">
                            <label for="feedback-form-name">Name</label>
                            <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name">
                        </div>
    
                        <div class="form-group">
                            <label for="feedback-form-title">Title</label>
                            <input type="text" class="form-control" id="feedback-form-title"
                                placeholder="Title of your feedback">
                        </div>
    
                        <div class="form-group">
                            <label for="feedback-form-message">Message</label>
                            <textarea type="text" placeholder="Enter your message, then hit the submit" class="form-control"
                                id="feedback-form-message" rows="6"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default pull-right cp-bg-blue">Submit</button>
                    </form>
                </div>
                </div><!-- primary -->
                <aside class="col-sm-7 card my-5 mx-1">
                    <div class="maincontent feedback card-body">
                        <h2 class="article-title">Recent Feedback</h2>
                        <div class="feedback-messages">
    
                        </div>
                    </div>
                </aside><!-- secondary -->
            </div>
        </div><!-- container -->
        
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="/routes/feedback.js"></script>
  </body>
</html>